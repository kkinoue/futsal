<% if signed_in? %>
    <h1><%= current_user.name %> さんのホーム画面</h1>
    <div class="row">
      <div class="col-md-12">
        <div class="tabbable">
          <ul class="nav nav-tabs nav-tabs-justified">
            <li class="active">
              <a href="#scheduleTab" data-toggle="tab">
                参加予定</a></li>
            <li class="">
              <a href="#pastTab" data-toggle="tab">
                過去の参加</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane fade in active" id="scheduleTab">
              <%= render partial: 'shared/event', locals: { events: @attend_events } %>
            </div>
            <div class="tab-pane fade" id="pastTab">
              <%= render partial: 'shared/event', locals: { events: @past_events } %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% else %>
    <header class="jumbotron center">
      <h1>ホーム画面</h1>
      <h2>フットサルの予定です</h2>
      <%= link_to "新規登録", signup_path,
                  class: "btn btn-lg btn-primary" %>
    </header>
<% end %>